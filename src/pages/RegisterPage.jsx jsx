import React, { useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Link, useNavigate } from "react-router-dom";

export default function RegisterPage() {
  const navigate = useNavigate();
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    password: "",
  });

  const handleChange = (e) => {
    setFormData({ ...formData, [e.target.name]: e.target.value });
  };

  const handleRegister = () => {
    localStorage.setItem("gptshid-user", JSON.stringify(formData));
    alert("ثبت‌نام با موفقیت انجام شد!");
    navigate("/login");
  };

  return (
    <div className="min-h-screen flex items-center justify-center bg-black text-white">
      <Card className="w-full max-w-md bg-zinc-900">
        <CardContent className="p-6 space-y-4">
          <h2 className="text-2xl font-bold text-yellow-400">ثبت‌نام در GPTShid</h2>
          <Input name="name" placeholder="نام کامل" className="text-black" onChange={handleChange} />
          <Input name="email" placeholder="ایمیل یا شماره موبایل" className="text-black" onChange={handleChange} />
          <Input type="password" name="password" placeholder="رمز عبور" className="text-black" onChange={handleChange} />
          <Button onClick={handleRegister} className="w-full bg-yellow-500 hover:bg-yellow-600 text-black">ثبت‌نام</Button>
          <p className="text-sm text-zinc-400">
            حساب دارید؟ <Link to="/login" className="text-yellow-400">وارد شوید</Link>
          </p>
        </CardContent>
      </Card>
    </div>
  );
}
